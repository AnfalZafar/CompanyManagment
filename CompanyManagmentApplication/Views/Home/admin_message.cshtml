@{
    int Row = 0;
}
@model CompanyManagmentApplication.Models.Models_Bind;
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Messages</h3>

        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Admin Messages</div>
                    </div>

                    <form class="w-75 m-auto mt-5" asp-action="submit_admin_message" asp-controller="Home" method="post" enctype="multipart/form-data">
                       
                        <div data-mdb-input-init class="form-outline mb-4">
                            <select name="user_id" value="@Model.Products" asp-items="@ViewBag.message" class="form-select" aria-label="Default select example">
                                <option selected>Message To Admin</option>
                               
                            </select>
                        </div>

                        <!-- Message input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <textarea class="form-control" name="message" id="form4Example3" rows="4"></textarea>
                            <label class="form-label" for="form4Example3">Message</label>
                        </div>



                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Send Message</button>


                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


