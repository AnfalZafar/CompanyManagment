@{
}


<table class="table mt-5">
    <thead style="margin-top:5rem;">
        <tr>
            <th scope="col">Product Img</th>
            <th scope="col">Product Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Message To Admin</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.your_product)
        {
            @if (item.Users.user_id.ToString() == Session_Class.User_Id && item.product_verify == "")
            {
                <tr>
                    <td>
                        <img src="~/@Url.Content(item.Users.user_img)"
                             alt=""
                             style="width: 45px; height: 45px"
                             class="rounded-circle" />
                    </td>
                    <td>@item.product_id</td>
                    <td>@item.product_name</td>
                    <td>@item.product_description</td>
                    <td>@item.product_price</td>

                    <td>
                        <a type="submit" asp-route-id="message_admin" asp-controller="Home" class="btn btn-primary btn-sm btn-rounded">Message To Admin</a>
                    </td>
                 

                </tr>
            }

        }
    </tbody>
</table>