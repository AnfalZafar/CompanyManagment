@{
}


<table class="table mt-5">
    <h1>Cancel Products</h1>
    <thead>
        <tr>
            <th scope="col">User Img</th>
            <th scope="col">User Name</th>
            <th scope="col">Product Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Update</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cancel_product)
        {
            @if (item.product_verify == "0")
            {
                <tr>
                    <td>
                        <img src="~/@Url.Content(item.Users.user_img)"
                             alt=""
                             style="width: 45px; height: 45px"
                             class="rounded-circle" />
                    </td>
                    <td>@item.Users.user_name</td>
                    <td>@item.product_id</td>
                    <td>@item.product_name</td>
                    <td>@item.product_description</td>
                    <td>@item.product_price</td>
                    <td><a asp-route-id="@item.product_id" asp-action="update_cancel_product" asp-controller="Home" class="btn btn-primary btn-sm btn-rounded p-2">Update Product</a></td>
                  
                  
                </tr>
            }

        }
    </tbody>
</table>