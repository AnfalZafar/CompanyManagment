@{
}
@model CompanyManagmentApplication.Models.Models_Bind;

<section style="background-color: #eee;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    @if (ViewBag.message_id != null)
                    {

                        @foreach (var message in ViewBag.message_id)
                        {
                            @foreach (var user in Model.Users)
                            {
                                @foreach(var replay in Model.message_Replays){
                                    @if (message.user_id == user.user_id)
                                {
                                    @if(message.Id == replay.Id){
                                        
                                    <div class="card-body">
                                        <div class="d-flex flex-start align-items-center">
                                            <img class="rounded-circle shadow-1-strong me-3"
                                                 src="~/@Url.Content(user.user_img)" alt="avatar" width="60"
                                                 height="60" />
                                            <div>
                                                <h6 class="fw-bold text-primary mb-1">
                                                    @user.user_name
                                                </h6>

                                            </div>
                                        </div>

                                        <p class="mt-3 mb-4 pb-2">
                                            @message.Replay_text
                                        </p>


                                    </div>


                                   
                                    <form asp-action="replay_message_replay" asp-controller="Home" class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                                        <div class="d-flex flex-start w-100">
                                            <img class="rounded-circle shadow-1-strong me-3"
                                                 src="~/@Url.Content(user.user_img)" alt="avatar" width="40"
                                                 height="40" />
                                            <div data-mdb-input-init class="form-outline w-100">
                                                <input type="hidden" name="message_user_id" value="@message.message_id" />
                                                        <input type="hidden" name="user_id" value="@Session_Class.User_Id" />
                                                <textarea class="form-control" name="replay_text" id="textAreaExample" rows="4"
                                                          style="background: #fff;"></textarea>
                                                <label class="form-label" for="textAreaExample">Replay To @user.user_name</label>
                                            </div>
                                        </div>
                                        <div class="float-end mt-2 pt-1">
                                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-sm">
                                                Replay To Message
                                            </button>

                                        </div>
                                    </form>
                                        }
                                    }
                                }
                            }
                        }
                    }
                    else
                    {
                        <h1>Hello</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
