@{
    Layout = "SignUp";
}
@model CompanyManagmentApplication.Models.Users;

@if (!string.IsNullOrEmpty(ViewBag.signup_error))
{
    <script>
        alert(@ViewBag.signup_error);
    </script>
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <script>
        alert(@ViewBag.error);
    </script>
}
@if (!string.IsNullOrEmpty(ViewBag.user_error))
{
    <script>
        alert(@ViewBag.user_error);
    </script>
}
<!-- Sign up form

-->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form asp-action="signup" asp-controller="SignUp" method="post" class="register-form" name="register-form">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="user_name" placeholder="Your Name" />
                    </div>
                    
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email"   name="user_email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="fa-solid fa-phone"></i></label>
                        <input type="number"   name="user_phone" placeholder="Your Phone Number" />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password"   name="user_password" placeholder="Your Password" />
                    </div>
                    <div class="form-group">
                        <label for="address"><i class="fa-solid fa-location-dot"></i></label>
                        <input type="text"   name="user_address" placeholder="Your Address" />
                    </div>
                    
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="FormAsseets/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>