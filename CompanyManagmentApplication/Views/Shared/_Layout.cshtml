<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Managment Dashboard</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
          name="viewport" />
    <link rel="icon"
          href="~/assets/img/kaiadmin/favicon.ico"
          type="image/x-icon" />

    <!-- Fonts and icons -->
    <script src="~/assets/js/plugin/webfont/webfont.min.js"></script>
    <script src="https://kit.fontawesome.com/0962378758.js" crossorigin="anonymous"></script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/plugins.min.css" />
    <link rel="stylesheet" href="~/assets/css/kaiadmin.min.css" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="~/assets/css/demo.css" />

</head>
<body>
    @model CompanyManagmentApplication.Models.Models_Bind;
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" data-background-color="dark">
            <div class="sidebar-logo">
                <!-- Logo Header -->
                <div class="logo-header" data-background-color="dark">
                    <a asp-action="Index" asp-controller="Home" class="logo">
                        <img src="~/assets/img/kaiadmin/logo_light.svg"
                             alt="navbar brand"
                             class="navbar-brand"
                             height="20" />
                    </a>
                    <div class="nav-toggle">
                        <button class="btn btn-toggle toggle-sidebar">
                            <i class="gg-menu-right"></i>
                        </button>
                        <button class="btn btn-toggle sidenav-toggler">
                            <i class="gg-menu-left"></i>
                        </button>
                    </div>
                    <button class="topbar-toggler more">
                        <i class="gg-more-vertical-alt"></i>
                    </button>
                </div>
                <!-- End Logo Header -->
            </div>
            <div class="sidebar-wrapper scrollbar scrollbar-inner">
                <div class="sidebar-content">
                    <ul class="nav nav-secondary">
                        @* Main dashboard *@
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home">
                                <i class="fas fa-file"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        @if (Session_Class.role_id == 1)
                        {
                            @* Employ Detail list *@
                            <li class="nav-item">
                                <a data-bs-toggle="collapse" href="#base">
                                    <i class="fa-solid fa-users"></i>
                                    <p>Employ Detail</p>
                                    <span class="caret"></span>
                                </a>
                                <div class="collapse" id="base">
                                    <ul class="nav nav-collapse">
                                        <li>
                                            <a asp-action="add_employ">
                                                <span class="sub-item">Add Users</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="show_employ" asp-controller="Home">
                                                <span class="sub-item">Show Employ</span>
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </li>
                        }

                        @* Products Detail *@
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#sidebarLayouts">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <p>Products Detail</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="sidebarLayouts">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a asp-action="product_model" asp-controller="Home">
                                            <span class="sub-item">Add Products</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="show_product" asp-controller="Home">
                                            <span class="sub-item">Show Products</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        @if(Session_Class.role_id == 1){

                        @* Users Detail *@
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#forms">
                                <i class="fas fa-pen-square"></i>
                                <p>Users Products Detail</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="forms">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a asp-action="pending_product" asp-controller="Home">
                                            <span class="sub-item">Users Pending Products</span>
                         
                                                    <span class="badge badge-success">@Model.Products.Where(s => s.product_verify == "").Count()</span>
                                             
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="cancel_product" asp-controller="Home">
                                            <span class="sub-item">Users Cancel Products</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        }


                        @if(Session_Class.role_id == 3){
                        @* Users Detail for users *@

                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#maps">
                                    <i class="fas fa-pen-square"></i>
                                <p>Your Products Details</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="maps">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a asp-action="your_pending_product" asp-controller="Home">
                                            <span class="sub-item">Pending Products</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="Reject_product" asp-controller="HOme">
                                            <span class="sub-item">Reject Products</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        }



                      @* Message To People *@

                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#message">
                                <i class="fa-solid fa-message"></i>
                                <p>Messages</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="message">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a asp-action="admin_message" asp-controller="Home">
                                            <span class="sub-item">Message To Admin</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-action="employ_message" asp-controller="Home">
                                            <span class="sub-item">Message To Employ</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>




                        <li class="nav-item">
                            <a asp-action="your_messages" asp-controller="Home">
                                <i class="fas fa-desktop"></i>
                                <p>Replay Messages</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="you_replay_messages" asp-controller="Home">
                                <i class="fas fa-file"></i>
                                <p>You Replay messages</p>
                                
                            </a>
                        </li>
                        <li class="nav-item">
                            <a data-bs-toggle="collapse" href="#submenu">
                                <i class="fas fa-bars"></i>
                                <p>Menu Levels</p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="submenu">
                                <ul class="nav nav-collapse">
                                    <li>
                                        <a data-bs-toggle="collapse" href="#subnav1">
                                            <span class="sub-item">Level 1</span>
                                            <span class="caret"></span>
                                        </a>
                                        <div class="collapse" id="subnav1">
                                            <ul class="nav nav-collapse subnav">
                                                <li>
                                                    <a href="#">
                                                        <span class="sub-item">Level 2</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <span class="sub-item">Level 2</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                    <li>
                                        <a data-bs-toggle="collapse" href="#subnav2">
                                            <span class="sub-item">Level 1</span>
                                            <span class="caret"></span>
                                        </a>
                                        <div class="collapse" id="subnav2">
                                            <ul class="nav nav-collapse subnav">
                                                <li>
                                                    <a href="#">
                                                        <span class="sub-item">Level 2</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <span class="sub-item">Level 1</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="main-panel">
            <div class="main-header">
                <div class="main-header-logo">
                    <!-- Logo Header -->
                    <div class="logo-header" data-background-color="dark">
                        <a href="index.html" class="logo">
                            <img src="assets/img/kaiadmin/logo_light.svg"
                                 alt="navbar brand"
                                 class="navbar-brand"
                                 height="20" />
                        </a>
                        <div class="nav-toggle">
                            <button class="btn btn-toggle toggle-sidebar">
                                <i class="gg-menu-right"></i>
                            </button>
                            <button class="btn btn-toggle sidenav-toggler">
                                <i class="gg-menu-left"></i>
                            </button>
                        </div>
                        <button class="topbar-toggler more">
                            <i class="gg-more-vertical-alt"></i>
                        </button>
                    </div>
                    <!-- End Logo Header -->
                </div>
                <!-- Navbar Header -->
                <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
                    <div class="container-fluid">
                        <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-search pe-1">
                                        <i class="fa fa-search search-icon"></i>
                                    </button>
                                </div>
                                <input type="text"
                                       placeholder="Search ..."
                                       class="form-control" />
                            </div>
                        </nav>

                        <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">
                            <li class="nav-item topbar-icon dropdown hidden-caret d-flex d-lg-none">
                                <a class="nav-link dropdown-toggle"
                                   data-bs-toggle="dropdown"
                                   href="#"
                                   role="button"
                                   aria-expanded="false"
                                   aria-haspopup="true">
                                    <i class="fa fa-search"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-search animated fadeIn">
                                    <form class="navbar-left navbar-form nav-search">
                                        <div class="input-group">
                                            <input type="text"
                                                   placeholder="Search ..."
                                                   class="form-control" />
                                        </div>
                                    </form>
                                </ul>
                            </li>

                          

                            @*notification place *@
                            @if (Session_Class.role_id == 1){
                                <li class="nav-item topbar-icon dropdown hidden-caret">
                                    <a class="nav-link dropdown-toggle"
                                       href="#"
                                       id="messageDropdown"
                                       role="button"
                                       data-bs-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="fa fa-envelope"></i>
                                        <span class="notification">@Model.Messages.Where(s => s.to_email == Session_Class.User_Email).Count()</span>
                                    </a>
                                    <ul class="dropdown-menu messages-notif-box animated fadeIn"
                                        aria-labelledby="messageDropdown">
                                        <li>
                                            <div class="dropdown-title d-flex justify-content-between align-items-center">
                                                Messages
                                                <a href="#" class="small">Mark all as read</a>

                                            </div>
                                        </li>
                                        <li>
                                            <div class="message-notif-scroll scrollbar-outer">
                                                <div class="notif-center">
                                                  @foreach (var message in Model.Messages)
                                                    {
                                                        @foreach (var user in Model.Users)
                                                        {
                                                            if (message.from_email == user.user_email)
                                                            {
                                                                if(message.to_email == Session_Class.User_Email){
                                                                    <a asp-route-id="@message.message_id" asp-action="message_profile" asp-controller="Home">
                                                        <div class="notif-img">
                                                                   <img src="~/@Url.Content(user.user_img)"
                                                                 alt="Img Profile" />
                                                        </div>
                                                        <div class="notif-content">
                                                                <span class="subject">@user.user_name</span>
                                                            <span class="block">
                                                               @message.message_object
                                                            </span>
                                                            
                                                        </div>
                                                    </a>
                                                                }
                                                    }
                                                    }
                                                    } 
                                                @*   @foreach (var message in Model.Messages)
                                                    {
                                                        var user = Model.Users.FirstOrDefault(u => u.user_email == message.from_email);
                                                        <div>@($"Message ID: {message.from_email}, User Found: {(user.user_email)}")</div>
                                                        ;
                                                    }  *@
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <a class="see-all" href="javascript:void(0);">
                                                See all messages<i class="fa fa-angle-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </li>



                                <li class="nav-item topbar-icon dropdown hidden-caret">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="notifDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-haspopup="true"
                                   aria-expanded="false">
                                    <i class="fa fa-bell"></i>
                                    
                                    <span class="notification">@Model.Products.Where(s => s.product_verify == "").Count()</span>
                                  
                                </a>

                                <ul class="dropdown-menu messages-notif-box animated fadeIn"
                                    aria-labelledby="messageDropdown">
                                    <li>
                                        <div class="dropdown-title d-flex justify-content-between align-items-center">
                                            Notifications
                                            <a href="#" class="small">Mark all as read</a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="message-notif-scroll scrollbar-outer">
                                            <div class="notif-center">
                                                @foreach (var item in Model.Products)
                                                {
                                                    @if (item.product_verify == "")
                                                    {
                                                        <a asp-route-id="@item.user_id" asp-action="verify_product" asp-controller="Home">
                                                            <div class="notif-img">
                                                                <img src="~/@Url.Content(@item.Users.user_img)"
                                                                     alt="Img Profile" />
                                                            </div>
                                                            <div class="notif-content">
                                                                <span class="subject">@item.Users.user_name</span>
                                                                <span class="block">@item.product_name</span>
                                                                <span class="time"></span>
                                                            </div>
                                                        </a>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <a class="see-all" href="javascript:void(0);">
                                            See all messages<i class="fa fa-angle-right"></i>
                                        </a>
                                    </li>
                                </ul>



                            </li>


                            }else{
                                <li class="nav-item topbar-icon dropdown hidden-caret">
                                    <a class="nav-link dropdown-toggle"
                                       href="#"
                                       id="messageDropdown"
                                       role="button"
                                       data-bs-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="fa fa-envelope"></i>
                                        <span class="notification">@Model.Messages.Where(s => s.to_email == Session_Class.User_Email).Count()</span>
                                    </a>
                                    <ul class="dropdown-menu messages-notif-box animated fadeIn"
                                        aria-labelledby="messageDropdown">
                                        <li>
                                            <div class="dropdown-title d-flex justify-content-between align-items-center">
                                                Messages
                                                <a href="#" class="small">Mark all as read</a>

                                            </div>
                                        </li>
                                        <li>
                                            <div class="message-notif-scroll scrollbar-outer">
                                                <div class="notif-center">
                                                    @foreach (var message in Model.Messages)
                                                    {
                                                        @foreach (var user in Model.Users)
                                                        {
                                                            if (message.from_email == user.user_email)
                                                            {
                                                                if (message.to_email == Session_Class.User_Email)
                                                                {
                                                                    <a asp-route-id="@message.message_id" asp-action="message_profile" asp-controller="Home">
                                                                        <div class="notif-img">
                                                                            <img src="~/@Url.Content(user.user_img)"
                                                                            alt="Img Profile" />
                                                                        </div>
                                                                        
                                                                        <div class="notif-content">
                                                                            <span class="subject">@user.user_name</span>
                                                                            <span class="block">
                                                                                @message.message_object
                                                                            </span>

                                                                        </div>
                                                                    </a>
                                                                }
                                                            }
                                                        }
                                                    }
                                                    @*   @foreach (var message in Model.Messages)
                                                {
                                                var user = Model.Users.FirstOrDefault(u => u.user_email == message.from_email);
                                                <div>@($"Message ID: {message.from_email}, User Found: {(user.user_email)}")</div>
                                                ;
                                                }  *@
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <a class="see-all" href="javascript:void(0);">
                                                See all messages<i class="fa fa-angle-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @* Your Profile *@

                            <li class="nav-item topbar-user dropdown hidden-caret">
                                <a class="dropdown-toggle profile-pic"
                                   data-bs-toggle="dropdown"
                                   href="#"
                                   aria-expanded="false">
                                    <div class="avatar-sm">
                                        <img src="~/@Url.Content(Session_Class.User_Img)"
                                             alt="..."
                                             class="avatar-img rounded-circle" />
                                    </div>
                                    <span class="profile-username">
                                        <span class="op-7">Hi,</span>
                                        <span class="fw-bold">@Session_Class.User_Name</span>
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-user animated fadeIn">
                                    <div class="dropdown-user-scroll scrollbar-outer">
                                    <li>
                                        <div class="user-box">
                                            <div class="avatar-lg">
                                                <img src="~/@Url.Content(Session_Class.User_Img)"
                                                     alt="image profile"
                                                     class="avatar-img rounded" />
                                            </div>
                                            <div class="u-text">
                                                <h4>@Session_Class.User_Name</h4>
                                                <p class="text-muted">@Session_Class.User_Email</p>
                                                <a asp-route-id="@Session_Class.User_Id" asp-action="user_profile" asp-controller="Home"
                                                   class="btn btn-xs btn-secondary btn-sm">View Profile</a>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-route-id="@Session_Class.User_Id" asp-action="user_profile" asp-controller="Home">My Profile</a>
                                        
                                        <a class="dropdown-item" href="#">Logout</a>
                                    </li>
                    </div>
                    </ul>
                    </li>
                    </ul>
            </div>
            
        </div>
            <!-- End Navbar -->
             <div class="container">
                    @RenderBody();
                    </div>
        </div>
    
        <!-- End Custom template -->
    </div>
    <!--   Core JS Files   -->
    <script src="~/assets/js/core/jquery-3.7.1.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="~/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

    <!-- Chart JS -->
    <script src="~/assets/js/plugin/chart.js/chart.min.js"></script>

    <!-- jQuery Sparkline -->
    <script src="~/assets/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

    <!-- Chart Circle -->
    <script src="~/assets/js/plugin/chart-circle/circles.min.js"></script>

    <!-- Datatables -->
    <script src="~/assets/js/plugin/datatables/datatables.min.js"></script>

    <!-- Bootstrap Notify -->
    <script src="~/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- jQuery Vector Maps -->
    <script src="~/assets/js/plugin/jsvectormap/jsvectormap.min.js"></script>
    <script src="~/assets/js/plugin/jsvectormap/world.js"></script>

    <!-- Sweet Alert -->
    <script src="~/assets/js/plugin/sweetalert/sweetalert.min.js"></script>

    <!-- Kaiadmin JS -->
    <script src="~/assets/js/kaiadmin.min.js"></script>

    <!-- Kaiadmin DEMO methods, don't include it in your project! -->
    <script src="~/assets/js/setting-demo.js"></script>
    <script src="~/assets/js/demo.js"></script>
</body>
</html>